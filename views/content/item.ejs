<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Products</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
            <li class="breadcrumb-item active">Product</li>
            <li class="breadcrumb-item active">Items</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">

          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Item List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Item ID</th>
                  <th>Name</th>
                  <th>Unit Price</th>
                  <th>Type</th>
                  <th>Details</th>
                </tr>
                </thead>
                <tbody>

                  <% for(i=0; i<prod.length;i++){ %>
                  <tr>
                    <td><%=prod[i].id %></td>
                    <td><%=prod[i].item_name %></td>
                    <td><%=prod[i].unit_price %></td>
                    <td><%=prod[i].item_type %></td>
                    <td><button type="button" class="btn btn-info" data-toggle="modal" data-target="#itemDetails<%-i%>"><i class="nav-icon fas fa-info-circle"></i></button></td>
                  </tr>
                 
                  <%}%>
                </tbody>
                <tfoot>
                <tr>
                  <th>Item ID</th>
                  <th>Name</th>
                  <th>Unit Price</th>
                  <th>Type</th>
                  <th>Details</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
  
  <!-- Modal -->
  <% for(i=0; i<prod.length;i++){ %>
  <div class="modal fade bd-example-modal-lg" id="itemDetails<%-i%>" tabindex="-1" role="dialog" aria-labelledby="item DetailTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Item Details</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-4">
              
              <img src="<%=prod[i].item_img %>" class="img-thumbnail" alt="<%=prod[i].item_name %>">
            </div>
            <div class="col-md-7">
              <h2><%=prod[i].item_name %></h2>
              <label for="itemDesc">Item Description</label>
              <p style="text-align:justify"><%=prod[i].item_description %></p>

            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div> 
  <%}%>
</div>